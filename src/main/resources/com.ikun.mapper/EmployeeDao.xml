<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ikun.dao.EmployeeDao">

    <resultMap type="com.ikun.entity.Employee" id="EmployeeMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="personId" column="person_id" jdbcType="VARCHAR"/>
        <result property="phone" column="phone" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="EmployeeMap">
        select
          id, person_id, phone
        from employee
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="EmployeeMap">
        select
          id, person_id, phone
        from employee
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="personId != null and personId != ''">
                and person_id = #{personId}
            </if>
            <if test="phone != null and phone != ''">
                and phone = #{phone}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from employee
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="personId != null and personId != ''">
                and person_id = #{personId}
            </if>
            <if test="phone != null and phone != ''">
                and phone = #{phone}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into employee(person_id, phone)
        values (#{personId}, #{phone})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into employee(person_id, phone)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.personId}, #{entity.phone})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into employee(person_id, phone)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.personId}, #{entity.phone})
        </foreach>
        on duplicate key update
        person_id = values(person_id),
        phone = values(phone)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update employee
        <set>
            <if test="personId != null and personId != ''">
                person_id = #{personId},
            </if>
            <if test="phone != null and phone != ''">
                phone = #{phone},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from employee where id = #{id}
    </delete>

</mapper>

